<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColor"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/info"
                android:layout_weight="2"
                android:textAlignment="viewStart"
                android:onClick="info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newAlarm"
                android:textColor="#ffffffff"
                android:textSize="20.0sp"
                android:layout_weight="6"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/analysis"
                android:layout_weight="2"
                android:onClick="analysis"/>

        </LinearLayout>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3.0dip" />
    </LinearLayout>
    <Button
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5.0dip"
        android:background="@color/bgColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:textColor="@android:color/white"
        android:onClick="setAlarm"
        android:padding="8.0dip"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/showtime"
        android:layout_above="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textColor="#ff000000" />


    <LinearLayout
        android:id="@+id/repeatLay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="10.0dip">

        <TextView
            android:id="@+id/repeatTag"
            android:layout_marginStart="10.0dip"
            android:layout_weight="5.0"
            android:paddingTop="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="18.0sp" />

        <Switch
            android:id="@+id/repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/repeatLay"
        android:layout_marginTop="3.0dip"
        android:background="@color/bgColor" />

    <LinearLayout
        android:id="@+id/snoozeLay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeatLay">

        <TextView
            android:id="@+id/snoozeTag"
            android:layout_marginStart="10.0dip"
            android:layout_weight="5.0"
            android:paddingTop="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snooze time"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="18.0sp" />

        <EditText
            android:id="@+id/snooze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2.0dip"
            android:layout_weight="1.0"
            android:text="5"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/snoozeLay"
        android:background="@color/bgColor" />
</RelativeLayout>